<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="be.sokarcreative.demo.MainActivity"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp">
        <!-- Current Weather -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Weather"
            style="@style/importantText"/>
        <be.sokarcreative.easyowm.api.WeatherIconView
            android:id="@+id/weatherIconViewCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:weatherIconColor="#3F51B5"
            app:weatherIconSize="80" />
        <TextView android:id="@+id/textViewCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"/>
        <TextView android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="26sp"/>
        <!-- 5 day / 3 hour forecast -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 day / 3 hour forecast"
            style="@style/importantText"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewHourForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!-- Call 16 day / daily forecast data -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call 16 day / daily forecast data"
            style="@style/importantText"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewDailyForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
